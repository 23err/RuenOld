<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_item_margin_horizontal"
    android:layout_marginVertical="@dimen/card_item_margin_vertical"
    app:cardBackgroundColor="?colorPrimary"
    card_view:cardCornerRadius="@dimen/card_item_corner_radius"
    card_view:cardElevation="@dimen/card_item_elevation">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/rv_card_item_tv_padding_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/rv_item_text_size"
            tools:text="@string/test_word" />

        <TextView
            android:id="@+id/tv_transcription"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/rv_card_item_tv_padding_horizontal"
            android:textAlignment="center"
            android:textColor="@color/gray_300"
            android:textSize="@dimen/rv_item_transcription_text_size"
            tools:text="@string/test_word" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>