<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentWordOfDay">

    <View
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="357dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_background_word_day"
        android:elevation="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-52dp" />


    <View
        android:id="@+id/word_for_day"
        android:layout_width="238dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_word_for_day"
        android:elevation="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="-88dp" />

    <View
        android:id="@+id/money"
        android:layout_width="218dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_money"
        android:elevation="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/money_ru"
        android:layout_width="166dp"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_ru"
        android:elevation="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="61dp" />

    <View
        android:id="@+id/add"
        android:layout_width="84dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_add"
        android:elevation="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="173dp" />


</androidx.constraintlayout.widget.ConstraintLayout>